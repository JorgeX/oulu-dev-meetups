---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Intro from '../components/Intro.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import BaseHead from '../components/BaseHead.astro';
---

<html class="h-full">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="h-full">
		<div class="min-h-full">
			<Header/>
			<div class="py-10">
			<main>
				<div class="mx-auto max-w-7xl sm:px-6 lg:px-8 flex flex-col">
					<div class="container">
						<div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
						<div class="relative shadow-xl sm:rounded-2xl">
							<div class="">
								<img class="sm:rounded-2xl" width={1200} height={600} src={'/images/oulu-devmeetups-hero.jpg'} alt="artistic picture of Oulu castle" />
							</div>
						</div>
						</div>
					</div>
					<div class="m-4 text-center">
						<Intro/>
					</div>
				</div>
			</main>
			<Footer />
			</div>
		</div>
	</body>
</html>