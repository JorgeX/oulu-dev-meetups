---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import BaseHead from '../components/BaseHead.astro';
import MeetupPageCard from '../components/MeetupPageCard.astro';

const { meetup } = Astro.props;
const title = meetup.data.title;
const description =
  meetup.body.length > 150
    ? meetup.body.substring(0, 150) + '...'
    : meetup.body;
const image = meetup.data.image;
---

<head>
  <BaseHead title={title} description={description} image={image} />
</head>
<body class="h-full">
  <div class="min-h-full">
    <Header headerText={meetup.data.title} />
    <main>
      <div class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8">
        <MeetupPageCard meetup={meetup} />
      </div>
    </main>
    <Footer />
  </div>
</body>
